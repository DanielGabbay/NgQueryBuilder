{
  "name": "ng-query-builder-workspace",
  "version": "1.0.0",
  "description": "NgQueryBuilder library and demo workspace",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "ng serve",
    "build": "ng build",
    "build:lib": "ng-packagr -p projects/ng-query-builder/ng-package.json",
    "pack:lib": "cd dist/ng-query-builder && npm pack",
    "publish:lib": "npm run build:lib && cd dist/ng-query-builder && npm publish",
    "preview": "ng serve --configuration=production"
  },
  "dependencies": {
    "@angular/build": "^20.1.0",
    "@angular/cdk": "^20.2.3",
    "@angular/cli": "^20.1.0",
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/compiler-cli": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "rxjs": "^7.8.2",
    "tailwindcss": "latest"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "ng-packagr": "^20.3.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
